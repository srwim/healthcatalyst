<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PeopleSearch - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Common/css")

    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The People Search", "Search", "Person", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-left">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Connectionstring", "Index", "Person")</li>
                </ul>
              </div>
                <div class="navbar-collapse collapse navbar-right">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Search", "Search", "Person")</li>
                        <li>@Html.ActionLink("Register", "Register", "Person")</li>
                    </ul>
                </div>
            </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        @*<footer class="do">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>
      
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/common/registerJs")
    @Scripts.Render("~/bundles/common/searchJs")
    @Scripts.Render("~/bundles/common/indexJS")
    @RenderSection("scripts", required: false)
</body>
</html>
